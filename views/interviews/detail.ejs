        <%- include('../includes/navbar.ejs') %>
            <main class="main-section mt-4">
                <h5 class="mb-3"><span class="text-muted">Applicant: </span>
                    <%= interviews[0].userId.firstName %>
                        <%= interviews[0].userId.lastName %>
