<%- include('../includes/header.ejs') %>
    </head>

    <body>
        <%- include('../includes/navbar.ejs') %>

            <main class="main-section mt-3">
                <form class="form-shadow" action="/admin/<% if (editing) { %>edit-interview<% } else { %>share<% } %>" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="inputQuestion1">Question 1</label>
                            <input type="text" value="<% if (editing) { %><%= interview.question1 %><% } %>" name="question1" class="form-control" id="inputQuestion1" placeholder="what was the question?">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputAnswer1">Answer 1</label>
                            <input type="text" value="<% if (editing) { %><%= interview.answer1 %><% } %>" name="answer1" class="form-control" id="inputAnswer1" placeholder="type your answer">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputQuestion2">Question 2</label>
                            <input type="text" value="<% if (editing) { %><%= interview.question2 %><% } %>" name="question2" class="form-control" id="inputQuestion2" placeholder="what was the question?">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputAnswer2">Answer 2</label>
                            <input type="text" value="<% if (editing) { %><%= interview.answer2 %><% } %>" name="answer2" class="form-control" id="inputAnswer2" placeholder="type your answer">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputQuestion3">Question 3</label>
                            <input type="text" value="<% if (editing) { %><%= interview.question3 %><% } %>" name="question3" class="form-control" id="inputQuestion3" placeholder="what was the question?">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputAnswer3">Answer 3</label>
                            <input type="text" value="<% if (editing) { %><%= interview.answer3 %><% } %>" name="answer3" class="form-control" id="inputAnswer3" placeholder="type your answer">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="university">University</label>
                            <input type="text" value="<% if (editing) { %><%= interview.university %><% } %>" name="university" class="form-control" id="university" placeholder="Type University name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputCourse">Course</label>
                            <select id="inputCourse" name="course" class="form-control">
                              <option  value="1">Choose...</option>
                              <option value="1">1st year student</option>
                              <option selected value="2">2nd year student</option>
                              <option  value="3">3rd year student</option>
                              <option value="4">4th year student</option>
                            </select>
                        </div>

                        <div class="form-group col-md-6">
                            <label for="inputStatus">Visa Status</label>
                            <select id="inputStatus" name="status" class="form-control">
                              <option selected value="rejected">Choose...</option>
                              <option value="true"> Accepted Visa</option>
                              <option value="false">Rejected Visa</option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="description">Recommendation</label>
                            <textarea name="recommendation" class="form-control" id="description" rows="2"><% if (editing) { %><%= interview.recommendation %><% } %></textarea>
                        </div>
                    </div>

                    <% if (editing) { %>
                        <input type="hidden" value="<%= interview._id %>" name="id">
                        <% } %>

                            <button class="btn btn-primary" type="submit"><% if (editing) { %>Update Interview<% } else { %>Submit<% } %></button>
                </form>
            </main>
            <%- include('../includes/end.ejs') %>